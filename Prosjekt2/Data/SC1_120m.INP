# Atmosphere and solar settings
atmosphere_file ../data/atmmod/afglus.dat
source solar ../data/solar_flux/atlas_plus_modtran
mol_modify O3 300. DU
day_of_year 170

# Surface and geometry
albedo 0.1
sza 52.0
#phi 0    # Optional: Nadir view (straight down) Standard val = 0
#umu 1.0  # Cosine of zenith angle (nadir view) Standard val = 1.0

# Altitude
#altitude 0.120  # Drone simulation (120 meters above ground) 
zout 0.12

# Radiative transfer settings
rte_solver disort
number_of_streams 6 

# Wavelength and spectral settings
wavelength 400.0 800.0
slit_function_file ../examples/TRI_SLIT.DAT
spline 400 800 1

# Output settings
quiet
